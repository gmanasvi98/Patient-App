<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/patient_recyclerView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#616161"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_height="?android:attr/actionBarSize">
    <TextView
        android:id="@+id/patient_item_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="22sp"
        android:textColor="#fff" />
    <TextView
        android:id="@+id/patient_item_name"
        app:layout_constraintLeft_toRightOf="@+id/patient_item_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manasvi"
        android:layout_marginLeft="15dp"
        android:textSize="22sp"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/patient_item_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:textSize="18sp"
        android:background="@color/colorAccent"
        android:padding="3dp"
        android:textColor="#fff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>